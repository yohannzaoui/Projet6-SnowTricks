<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                   https://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">

    <entity name="App\Domain\Models\Media" table="media">

        <unique-constraints>
            <unique-constraint columns="file_name" name="fileName" />
        </unique-constraints>

        <id name="id" type="integer" column="id">
            <generator strategy="AUTO"/>
        </id>

        <field name="fileName" column="file_name" type="string" length="255" nullable="false" />
        <field name="path" column="path" type="string" length="255" nullable="false" />

    </entity>

</doctrine-mapping>