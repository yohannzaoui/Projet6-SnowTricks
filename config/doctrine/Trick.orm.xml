<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                   https://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">

    <entity name="App\Domain\Models\Trick" table="trick">

        <unique-constraints>
            <unique-constraint columns="name" name="name" />
        </unique-constraints>

        <id name="id" type="uuid" column="id" />

        <field name="author" column="author" type="string" length="255" nullable="false" />
        <field name="name" column="name" type="string" length="255" nullable="false" unique="true" />
        <field name="description" column="description" type="text"  nullable="false" />
        <field name="createdAt" column="created_at" type="datetime" nullable="false" />
        <field name="updatedAt" column="updated_at" type="datetime" nullable="true" />

        
        <many-to-one field="category" target-entity="App\Domain\Models\Category">
        <cascade>
            <cascade-persist/>
        </cascade>
            <join-columns>
                <join-column nullable="false"/>
            </join-columns>
        </many-to-one>


        <one-to-many field="comments" target-entity="App\Domain\Models\Comment" mapped-by="trick" orphan-removal="true">
            <order-by>
                <order-by-field name="createdAt" direction="DESC"/>
            </order-by>
        </one-to-many>


        <many-to-many field="images" target-entity="App\Domain\Models\Image" orphan-removal="true" fetch="EXTRA_LAZY">
            <cascade>
                <cascade-persist/>
                <cascade-remove/>
            </cascade>
            <join-table name="tricks_images">
                <join-columns>
                    <join-column name="trick_id" referenced-column-name="id" on-delete="CASCADE" />
                </join-columns>
                <inverse-join-columns>
                    <join-column name="image_id" referenced-column-name="id" on-delete="CASCADE" />
                </inverse-join-columns>
            </join-table>
        </many-to-many>


        <many-to-many field="videos" target-entity="App\Domain\Models\Video" orphan-removal="true" fetch="EXTRA_LAZY">
            <cascade>
                <cascade-persist/>
                <cascade-remove/>
            </cascade>
            <join-table name="tricks_videos">
                <join-columns>
                    <join-column name="trick_id" referenced-column-name="id" on-delete="CASCADE" />
                </join-columns>
                <inverse-join-columns>
                    <join-column name="video_id" referenced-column-name="id" on-delete="CASCADE" />
                </inverse-join-columns>
            </join-table>
        </many-to-many>


        <one-to-one field="defaultImage" target-entity="App\Domain\Models\Image" orphan-removal="true">
            <cascade>
                <cascade-persist/>
                <cascade-remove/>
            </cascade>
            <join-column name="default_image_id" referenced-column-name="id" />
        </one-to-one>

    </entity>

</doctrine-mapping>