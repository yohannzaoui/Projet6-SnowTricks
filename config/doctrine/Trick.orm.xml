// Doctrine.ORM.Mapping.User.dcm.xml
<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                          http://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">


<entity name="Trick" table="trick">
    <id name="id" type="integer">
        <generator strategy="AUTO" />
    </id>

    <field name="name" column="name" type="string" length="255" />

    <field name="description" column="description" type="text" />

    <field name="image" column="image" type="text" />

    <field name="video" column="video" type="text" />

    <one-to-many field="comment" target-entity="Comment" mapped-by="trick" orphan-removal="true">
        <cascade>
            <cascade-persist/>
        </cascade>
    </one-to-many>

    <many-to-one fiels="category" target-entity="Category" inversed-by="trick">
        <cascade>
            <cascade-persist/>
        </cascade>
    </many-to-one>

    <field name="createdAt" column="created_at" type="datetime" />  
  </entity>
</doctrine-mapping>