<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                   https://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">

    <entity name="App\Domain\Models\Trick" table="trick">

        <unique-constraints>
            <unique-constraint columns="name" name="name" />
        </unique-constraints>

        <id name="id" type="uuid" column="id" />

        <field name="name" column="name" type="string" length="255" nullable="false" unique="true" />
        <field name="description" column="description" type="text"  nullable="false" />
        <field name="createdAt" column="created_at" type="datetime" nullable="false" />
        <field name="updatedAt" column="updated_at" type="datetime" nullable="true" />

        <many-to-one field="author" target-entity="App\Domain\Models\User" inversed-by="tricks">
            <join-column nullable="true" />
        </many-to-one>

        
        <many-to-one field="category" target-entity="App\Domain\Models\Category">
        <cascade>
            <cascade-persist/>
        </cascade>
            <join-columns>
                <join-column nullable="false"/>
            </join-columns>
        </many-to-one>


        <one-to-many field="comments" target-entity="App\Domain\Models\Comment" mapped-by="trick" orphan-removal="true">
            <order-by>
                <order-by-field name="createdAt" direction="DESC"/>
            </order-by>
        </one-to-many>

        <many-to-one field="image" target-entity="App\Domain\Models\Image">
        <cascade>
            <cascade-persist/>
        </cascade>
        </many-to-one>

        <many-to-one field="video" target-entity="App\Domain\Models\Video">
        <cascade>
            <cascade-persist/>
        </cascade>
        </many-to-one>



    </entity>

</doctrine-mapping>