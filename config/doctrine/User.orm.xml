<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                   https://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">

<entity name="App\Domain\Models\User" table="user">

    <unique-constraints>
        <unique-constraint columns="email" name="email" />
        <unique-constraint columns="username" name="username" />
    </unique-constraints>

    <id name="id" type="uuid" column="id" />


        <field name="username" column="username" type="string" length="255" nullable="false" unique="true" />
        <field name="password" column="password" type="string" length="255" nullable="false" />
        <field name="email" column="email" type="string" length="255" nullable="false" unique="true" />
        <field name="createdAt" column="created_at" type="datetime" nullable="false" />
        <field name="token" column="token" type="string" length="255" nullable="false" />
        <field name="roles" column="roles" type="string" length="255" nullable="true" />
        <field name="validated" column="validated" type="boolean" nullable="false" />
        <field name="active" column="active" type="boolean" nullable="false" />
        <field name="profilImage" column="profil_image" type="integer" nullable="true" />
        <field name="resetPasswordToken" column="reset_password_token" type="string" nullable="true" />


 
</entity>

</doctrine-mapping>