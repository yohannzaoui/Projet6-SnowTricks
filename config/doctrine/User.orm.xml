<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                   https://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">

<entity name="App\Domain\Models\User" table="user">

    <unique-constraints>
        <unique-constraint columns="email" name="email" />
        <unique-constraint columns="username" name="username" />
    </unique-constraints>

    <id name="id" type="integer" column="id">
        <generator strategy="AUTO"/>
    </id>


        <field name="username" column="username" type="string" length="255" nullable="false" />
        <field name="password" column="password" type="string" length="255" nullable="false" />
        <field name="email" column="email" type="string" length="255" nullable="false" unique="true" />
        <field name="createdAt" column="created_at" type="datetime" nullable="false" /> 
        <field name="token" column="token" type="string" length="255" nullable="false" />
        <field name="ctoken" column="ctoken" type="string" length="255" nullable="true" />
        <field name="roles" column="roles" type="string" length="255" nullable="true" />


        <one-to-one field="avatar" target-entity="App\Domain\Models\Avatar" inversed-by="avatar" >
            <join-column name="avatar_id" referenced-column-name="id" />
        </one-to-one>
 
</entity>

</doctrine-mapping>