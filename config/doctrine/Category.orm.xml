<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                   https://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">

    <entity name="App\Domain\Models\Category" table="category">

        <unique-constraints>
            <unique-constraint columns="name" name="name" />
        </unique-constraints>

        <id name="id" type="uuid" column="id" />

        <field name="name" column="name" type="string" length="255" nullable="false" />
        <field name="description" column="description" type="text" nullable="false" />
        

        <many-to-one field="trick" target-entity="App\Domain\Models\Trick" inversed-by="category">
        <join-column name="trick_id" referenced-column-name="id" />
        </many-to-one>

    </entity>

</doctrine-mapping>