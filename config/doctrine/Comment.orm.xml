<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                   https://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">

    <entity name="App\Domain\Models\Comment" table="comment">

        <id name="id" type="uuid" column="id" />


        <field name="pseudo" column="pseudo" type="string" length="255" nullable="false" />
        <field name="message" column="message" type="text" nullable="false" />
        <field name="createdAt" column="created_at" type="datetime" nullable="false" />


        <many-to-one field="trick" target-entity="App\Domain\Models\Trick" inversed-by="comments" >
            <join-column name="trick_id" referenced-column-name="id" on-delete="CASCADE"/>
        </many-to-one>

    </entity>

</doctrine-mapping>
