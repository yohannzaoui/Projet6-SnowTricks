{% extends 'base.html.twig' %}

{% block body %}

    <br>
    <div class="container">
    
    {% if app.user %}

        {% if editMode %}
        <h1>Modifier un Trick</h1>
        {% else %}
        <h1>Ajouter un Trick</h1>
        {% endif %}
        <div class="row">
            <div class="col-lg-6 col-md-10 mx-auto">
        {{ form_start(form) }}
            {{ form_row(form.name, {'label':'Nom du Trick','attr':{'placeholder': 'Entrez le nom du Trick'}}) }}
            {{ form_row(form.description, {'label':'Déscription','attr':{'placeholder': 'Entrez la déscription du Trick'}}) }}
            {{ form_row(form.image, {'label':'Image','attr':{'placeholder': 'Image'}}) }}
            {{ form_row(form.video, {'label':'Vidéo','attr':{'placeholder': 'Vidéo'}}) }}
            {#{{ form_row(form.category, {'label':'Catégories','attr':{'placeholder': 'Choisissez une catégorie'}}) }}#}
            <p>
                <button type="submit" class="btn btn-success">
                {% if editMode %}
                Modifier
                {% else %}
                Ajouter
                {% endif %}
                </button>
                <button type="reset" class="btn btn-danger">Effacer</button>
            </p>
        {{ form_end(form) }}
            </div>
        </div>

    
    {% else %}

        <p>Vous n'êtes pas connecter<p>
        <p><a href="{{path('login')}}">Se connecter</a></p>

    {% endif %}
    </div>
{% endblock body %}
