{% extends 'base.html.twig' %}

{% block body %}
{# home picture #}
    <img src="images/home_tricks.jpg" class="img-fluid" alt="Responsive image">

    <div class="container-fluid">
        <br>
        <div class="row justify-content-start">
        {% for trick in tricks %}
            <div class="col-lg-2 col-md-10 mx-auto">
                  <div class="card mb-3">
                    <img  src="{{trick.image}}" class="img-fluid" alt="Responsive image" alt="Card image">
                        <div class="card-footer">
                            <p><a href="{{path('trick', {'id':trick.id})}}">{{trick.name}}</a>
                                <a href="{{path('updatetrick', {'id':trick.id})}}"><i class="fas fa-edit"></i></a>
                                <a href="{{path('deltrick', {'id':trick.id})}}"><i class="fas fa-trash-alt"></i></a></p>
                        </div>
                      </div>
                  </div>
        {% endfor %}
          </div>
      </div>

{% endblock body %}