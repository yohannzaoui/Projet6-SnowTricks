{% extends 'base.html.twig' %}
{% block title %}Snow Tricks{% endblock %}

{% block body %}

    <img src="images/home.jpg" class="img-fluid" alt="Responsive image">



    <div class="container-fluid">
        <br>
        <div class="row justify-content-start">
            {% for trick in tricks %}
            <div class="col-lg-2 col-md-10 mx-auto">


                <div class="card border-secondary mb-3" style="max-width: 20rem;">

                    <div class="card-header">
                        <h5 style="text-align: center" ><a href="{{path('trick', {'id':trick.id})}}">{{trick.name}}</a></h5>
                    </div>
                        <img style="float:left;width:222px;height:222px;object-fit:cover" src="{{asset('/uploads/images/'~ trick.defaultImage.getImage)}}" alt="Image par dÃ©faut du trick" class="img-fluid">
                    {% if app.user %}
                        <div class="card-footer text-muted">
                            <div class="container-fluid">
                                <div class="row">
                                    <div class="col-lg-3 col-md-auto mx-auto">
                                        <a href="{{path('edittrick', {'id':trick.id})}}"><i class="fas fa-edit"></i></a>
                                    </div>
                                    <div class="col-lg-3 col-md-auto mx-auto">
                                        <a href="{{path('deltrick', {'id':trick.id})}}"><i class="fas fa-trash-alt"></i></a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endif %}

                </div>
            </div>
            {% endfor %}
        </div>
    </div>
{% endblock body %}