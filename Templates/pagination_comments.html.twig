<div class="row justify-content-center">
    <div>
        <ul class="pagination">
            {% if pagination.page>1 %}
            <li class="page-item">
                <a class="page-link" href="{{ path(pagination.route,
                    pagination.route_params|merge({'page': 1, "_fragment": 'link'})) }}"><</a>
            </li>
            <li class="page-item">
                <a class="page-link" href="{{ path(pagination.route,
                    pagination.route_params|merge({'page': pagination.page-1, "_fragment": 'link'})) }}"><<</a>
            </li>
            {% endif %}

            {% for p in range(max(pagination.page-4, 1),
                min(pagination.page+4, pagination.pages_count)) %}
            <li {% if p == pagination.page %} class="page-item active"{% endif %}>
                <a class="page-link" href="{{ path(pagination.route,
                    pagination.route_params|merge({'page': p, "_fragment": 'link'})) }}">{{ p }}</a>
            </li>
            {% endfor %}

            {% if pagination.page<pagination.pages_count %}
            <li class="page-item">
                <a class="page-link" href="{{ path(pagination.route,
                    pagination.route_params|merge({'page': pagination.page+1, "_fragment": 'link'})) }}">></a>
            </li>
                <li class="page-item">
                    <a class="page-link" href="{{ path(pagination.route,
                        pagination.route_params|merge({'page': pagination.pages_count, "_fragment": 'link'})) }}">>></a>
                </li>
            {% endif %}
        </ul>
    </div>
</div>