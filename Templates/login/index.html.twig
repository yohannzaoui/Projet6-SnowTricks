{% extends 'base.html.twig' %}
{% block title %}Connexion{% endblock %}

{% block body %}
<div class="container">
  <br>
    <h1>Connexion</h1>
    <div class="row">
      <div class="col-lg-6 col-md-10 mx-auto">
        <form action="{{path('login')}}" method="post">
          <div class="form-group row"> 
      </div>
      <div class="form-group">
          <label for="exampleInputtext1">Nom d'utilisateur</label>
              <input class="form-control" id="exampleInputtext1" placeholder="Votre nom d'utilisateur" type="text" name="_username" value="{{ last_username }}"/>
      </div>
      <div class="form-group">
          <label for="exampleInputPassword1">Mot de passe</label>
          <input class="form-control" id="exampleInputPassword1" placeholder="Votre mot de passe" type="password" name="_password" />
      </div>
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
      <p><button type="submit" class="btn btn-success">Se connecter</button> <button type="reset" class="btn btn-danger">Effacer</button></p>
        </form>


          <p><a href="{{path('forgot')}}">Mot de passe oubli√© ?</a></p>

          {% if error %}
              <p>{{ error.messageKey|trans(error.messageData, 'security') }}</p>
          {% endif %}

        </div>
    </div>
</div>
{% endblock body %}