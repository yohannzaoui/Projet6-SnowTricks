{% extends 'base.html.twig' %}


{% block body %}
    <div class="container">
        <br>
        <h1>Trick : {{ name }}</h1>
        <div class="row">
            <div class="col-lg-12 col-md-6 mx-auto">
                <img src="{{image}}" class="rounded mx-auto d-block img-fluid" alt="Responsive image">
                <br>
            </div>
            <p>{{ description }}</p>
        </div>
        <p class="infoTrick">Ajouté le {{ createdate | date("d/m/Y") }} {% if updatedate %} - Modifié le {{ updatedate | date("d/m/Y") }} {% endif %}</p>
    </div>
{% endblock body %}