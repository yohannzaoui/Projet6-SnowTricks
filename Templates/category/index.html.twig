{% extends 'base.html.twig' %}
{% block title %}Gestion des catégories{% endblock %}

{% block body %}
    <div class="container">
        <br>
            <h1>Gestion des catégories</h1>
            <div class="row">
                <div class="col-lg-6 col-md-10 mx-auto">
                    {{ form_start(form) }}
                        {{ form_row(form.name, {'label':'Nom de la catégorie','attr':{'placeholder': 'Entrez le nom du groupe'}}) }}
                        {{ form_row(form.description, {'label':'Description de la catégorie'})}}
                        <p>
                            <button type="submit" class="btn btn-success">Ajouter la catégorie</button> 
                            <button type="reset" class="btn btn-danger">Effacer</button>
                        </p>
                    {{ form_end(form)}}
                    </div>
                    <div class="col-lg-6 col-md-10 mx-auto">
                    <h4>Liste des catégories</h4>
                    {% for categorylist in categoryslist %}
                        <p>{{categorylist.name}}</p>
                    {% endfor %}
                    </div>
                </div>
            </div>
    </div>

{% endblock body %}