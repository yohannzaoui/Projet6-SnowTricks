    <body>
<header>
<nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
  <a class="navbar-brand" href="{{path('home')}}">Snow Tricks</a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor02" aria-controls="navbarColor02" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarColor02">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item active">
        <a class="nav-link" href="{{path('home')}}">Accueil <span class="sr-only">(current)</span></a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="{{path('about')}}">A propos</a>
      </li>
      {% if not app.user %}
      <li class="nav-item">
        <a class="nav-link" href="{{path('register')}}">Inscription</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="{{path('login')}}">Connexion</a>
      </li>
      {% else %}
      <li class="nav-item">
        <a class="nav-link" href="{{path('logout')}}">DÃ©connexion</a>
      </li>
      {% endif %}
    </ul>
  </div>
</nav>
</header>

{% block body %}
{% endblock body %}

<footer>
  <hr>
  <p class="copyright text-muted">Copyright &copy; Snow Tricks 2018</p>
  </footer>


